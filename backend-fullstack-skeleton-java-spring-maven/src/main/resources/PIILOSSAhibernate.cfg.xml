<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<!-- https://www.tutorialspoint.com/hibernate/hibernate_configuration.htm -->
<hibernate-configuration>
    <session-factory>
        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL92Dialectt</property>

		<!-- Connection settings https://www.postgresqltutorial.com/postgresql-jdbc/connecting-to-postgresql-database/ -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/kyy</property>
        <property name="hibernate.connection.username">kyy</property>
        <property name="hibernate.connection.password">mattolaituri</property>
<!--        <property name="hibernate.connection.password">S1ll1Voil3ipaKr0k0t11lilla</property>-->
        <property name="hibernate.default_schema">public</property>

        <property name="connection_pool_size">1</property>

        <!-- Drop and re-create all database on startup -->
        <!-- https://stackoverflow.com/questions/438146/what-are-the-possible-values-of-the-hibernate-hbm2ddl-auto-configuration-and-wha -->
        <!-- <property name="hibernate.hbm2ddl.auto">create-drop</property> -->
        <property name="hbm2ddl.auto">validate</property>

		<!-- Print executed SQL to stdout -->
        <property name="show_sql">true</property>

		<!-- Annotated entity domain_class_pojo_orm -->
<!--		<mapping class="fi.dev.academy.vaccinationdatabase.domain_class_pojo_ormclass_pojo_orm"/>-->
		<mapping class="fi.dev.academy.vaccinationdatabase.******"/>

    </session-factory>
</hibernate-configuration>